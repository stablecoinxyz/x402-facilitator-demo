# Radius Testnet Configuration
RADIUS_TESTNET_RPC_URL=https://rpc.testnet.radiustech.xyz/YOUR_API_KEY_HERE

# Facilitator Wallet (receives payments)
FACILITATOR_WALLET_PRIVATE_KEY=0x...
# Merchant address 
RECIPIENT_ADDRESS=0x...

# AI Agent Wallet (makes payments)
AI_AGENT_PRIVATE_KEY=0x...
AI_AGENT_ADDRESS=0x...

# Server Ports
FACILITATOR_PORT=3001
PREMIUM_API_PORT=3000

# Payment Settings
PAYMENT_AMOUNT=10000000000000000  # 0.01 USD in wei
PAYMENT_TIMEOUT=60  # seconds

# Settlement Mode (set to 'true' for real on-chain transactions)
ENABLE_REAL_SETTLEMENT=false  # Change to 'true' after funding wallets
