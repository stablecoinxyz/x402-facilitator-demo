# ========================================
# Radius Configuration (Radius Testnet)
# ========================================
RADIUS_TESTNET_RPC_URL=https://rpc.testnet.radiustech.xyz/YOUR_API_KEY_HERE

# Radius Merchant Wallet (receives payments from customers)
RADIUS_MERCHANT_ADDRESS=0x...

# Radius Facilitator Wallet (executes transactions, never holds funds)
RADIUS_FACILITATOR_PRIVATE_KEY=0x...
RADIUS_FACILITATOR_ADDRESS=0x...

# Radius AI Agent Wallet (makes payments)
RADIUS_AGENT_PRIVATE_KEY=0x...
RADIUS_AGENT_ADDRESS=0x...

# ========================================
# Base Configuration (Mainnet or Sepolia)
# ========================================
BASE_RPC_URL=https://mainnet.base.org
# For Sepolia: https://sepolia.base.org
# Or use premium RPC: Alchemy, QuickNode, etc.

# Base Merchant Wallet (receives payments from customers)
BASE_MERCHANT_ADDRESS=0x...

# Base Facilitator Wallet (executes transactions via ERC-20 transferFrom, never holds funds)
BASE_FACILITATOR_PRIVATE_KEY=0x...
BASE_FACILITATOR_ADDRESS=0x...

# Base AI Agent Wallet (makes payments, must approve facilitator)
BASE_AGENT_PRIVATE_KEY=0x...
BASE_AGENT_ADDRESS=0x...

# Base Chain ID (8453 = Mainnet, 84532 = Sepolia)
BASE_CHAIN_ID=8453

# SBC Token Address on Base
# Mainnet: 0xfdcC3dd6671eaB0709A4C0f3F53De9a333d80798 (18 decimals)
# Sepolia: 0xf9FB20B8E097904f0aB7d12e9DbeE88f2dcd0F16 (6 decimals)
BASE_SBC_TOKEN_ADDRESS=0xfdcC3dd6671eaB0709A4C0f3F53De9a333d80798

# SBC Decimals (18 for mainnet, 6 for sepolia)
BASE_SBC_DECIMALS=18

# ========================================
# Solana Configuration (Mainnet Beta)
# ========================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Or use a faster RPC: https://solana.getblock.io, https://rpc.helius.xyz, etc.

# Solana Merchant Wallet (receives payments from customers)
SOLANA_MERCHANT_ADDRESS=solana_merchant_public_key_here

# Solana Facilitator Wallet (executes transactions via SPL token delegation, never holds funds)
SOLANA_FACILITATOR_PRIVATE_KEY=base58_private_key_here
SOLANA_FACILITATOR_ADDRESS=solana_public_key_here

# Solana AI Agent Wallet (makes payments, must approve facilitator as delegate)
SOLANA_AGENT_PRIVATE_KEY=base58_private_key_here
SOLANA_AGENT_ADDRESS=solana_public_key_here

# SBC Token Address on Solana
SBC_TOKEN_ADDRESS=DBAzBUXaLj1qANCseUPZz4sp9F8d2sc78C4vKjhbTGMA

# Server Ports
FACILITATOR_PORT=3001
PREMIUM_API_PORT=3000

# Payment Settings
RADIUS_PAYMENT_AMOUNT=10000000000000000  # 0.01 USD in wei (18 decimals)
BASE_PAYMENT_AMOUNT=10000000000000000  # 0.01 SBC (18 decimals for mainnet, use 10000 for sepolia 6 decimals)
SOLANA_PAYMENT_AMOUNT=50000000  # 0.05 SBC (9 decimals)
PAYMENT_TIMEOUT=60  # seconds

# Preferred network for AI agent
# Options: 'radius-testnet', 'base', 'base-sepolia', 'solana-mainnet-beta'
# Note: All networks use the "exact" payment scheme
PREFERRED_NETWORK=radius-testnet

# Settlement Mode (set to 'true' for real on-chain transactions)
ENABLE_REAL_SETTLEMENT='false' # Change to 'true' after funding wallets
